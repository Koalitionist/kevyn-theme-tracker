                              {% endif %}
                              <button type="submit"
                                      class="button-primary mt-3 w-full">
                                {{ "main_collection_filter_sort_bar.apply_filters" | t }}
                              </button>
                            </div>
                          </div>
                        </div>
                    {% endcase %}
                  {% endunless %}
                </div>
              {%- endfor -%}
            </form>
          {% endif %}
