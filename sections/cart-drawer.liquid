  assign free_shipping_bar__type = section.settings.free_shipping_bar__type
  assign free_shipping_bar__starting_percentage = section.settings.free_shipping_bar__starting_percentage
  assign free_shipping_bar__target = section.settings.free_shipping_bar__target
  assign free_shipping_bar__height = section.settings.free_shipping_bar__height
  assign free_shipping_bar__bar_height = section.settings.free_shipping_bar__bar_height
  assign free_shipping_bar__color_scheme = section.settings.free_shipping_bar__color_scheme
  assign message = section.settings.message
  assign message__success = section.settings.message__success
  assign announcements__show = section.settings.announcements__show
  assign announcements__height = section.settings.announcements__height
  assign cart__recommended_products__enable = section.settings.cart__recommended_products__enable
  assign cart__recommended_products_source = section.settings.cart__recommended_products_source
  assign cart__recommended_products = section.settings.cart__recommended_products
  assign cart__recommended_products_quantity = section.settings.cart__recommended_products_quantity
  assign cart__recommended_products_hide_upsell_products = section.settings.cart__recommended_products_hide_upsell_products
  assign align__horizontal = section.settings.align__horizontal
  assign align__horizontal__footer = section.settings.align__horizontal__footer
-%}
{%- comment -%} Auto Generated Variables end {%- endcomment -%}

{% liquid
  case announcements__show
    when 'all'
      render "cart-drawer.announcement", class: "", desktop: true
    when 'header'
      render "cart-drawer.announcement", class: "", desktop: true
  endcase

  case free_shipping_bar__show
    when 'all'
      render "cart-drawer.free-shipping-bar", desktop: true
    when 'header'
      render "cart-drawer.free-shipping-bar", desktop: true
  endcase

  assign cart_empty_class = "hidden"
  assign cart_with_items_class = ""

  if cart.item_count == 0
    assign cart_empty_class = ""
    assign cart_with_items_class = "hidden"
  endif

%}

{% if settings.cart_type == 'drawer' %}
  <div class="pointer-events-none fixed inset-0 hidden cart-drawer group z-[101] ac:pointer-events-auto"
       data-drawer="cart">
    <section class="fixed inset-y-0 right-0 w-full max-w-[30rem] {{ settings.cart_color_scheme }} border-r border-r-gray-100 shadow-xl z-10 translate-x-[105%] group-ac:translate-x-0 group-ac:opacity-100 ease-linear flex flex-col h-full justify-between max-h-screen opacity-0 transition-[transform,_opacity] group-ac:delay-[0s,_0s] delay-[0s,_180ms] duration-[180ms,_0s]"
             data-drawer-content>

      <div class="absolute inset-0 flex h-full max-h-screen flex-col justify-between overflow-hidden">
        <header class="{{ settings.cart_color_scheme }} shadow-md border-b border-gray-100 z-10">
          {% case announcements__show %}
            {% when 'all' %}
              {% render "cart-drawer.announcement", class: "text-[13px] leading-tight", text_style: 'short', mobile: true %}
            {% when 'cart' %}
              {% render "cart-drawer.announcement", class: "text-[13px] leading-tight", text_style: 'short', mobile: true %}
          {% endcase %}

          {% case free_shipping_bar__show %}
            {% when 'all' %}
              {% render "cart-drawer.free-shipping-bar", mobile: true %}
            {% when 'cart' %}
              {% render "cart-drawer.free-shipping-bar", mobile: true %}
          {% endcase %}
          <div class="flex justify-between items-center px-4 py-2 {{ settings.cart_color_scheme }}">
            {% comment %}<div> close</div>{% endcomment %}

            <span class="flex items-center cart-title">
              Your Cart (<span data-cart-item-count>{{ cart.item_count }}</span>)
            </span>

            <button type="button"
                    class="flex h-8 items-center justify-center pl-1 text-gray-400 transition-all space-x-4 hf:text-gray-900"
                    data-drawer-close="cart"
                    data-cart-drawer-close>
              <div class="text-sm uppercase">Close</div>
              {% render '_icon', icon: 'arrow-right', class: "w-3 h-3 stroke-2" %}
            </button>
          </div>
        </header>
        <main class="relative bottom-0 flex-1 overflow-hidden {{ settings.cart_color_scheme }}">

          <div class="absolute gap-2 !m-0 inset-0 h-full overflow-y-auto scrollbar-y-slim px-4 pb-24 transition-all ease-in-out duration-200 flex flex-col {{ align__horizontal }} {{ cart_empty_class }}"
               data-cart-drawer-empty-content>
            {% liquid
              for block in section.blocks
                case block.type
                  when 'empty_text'
                    render 'richtext.text', block: block
                  when 'empty_buttons'
                    render 'richtext.buttons', block: block
                  when 'empty_accent_line'
                    render 'richtext.accent_line', block: block
                  when 'empty_feature_grid'
                    render 'cart-drawer.empty_feature_grid', block: block
                endcase
              endfor
            %}
            <div class="flex-1"></div>
          </div>

          <div class="absolute space-y-2 !m-0 inset-0 h-full overflow-y-auto scrollbar-y-slim px-4 pb-24 transition-all ease-in-out duration-200 {{ cart_with_items_class }}"
               data-cart-drawer-content>
            <section class="relative"
                     data-cart-drawer-gifts>
            </section>
            <section data-cart-drawer-line-items>
            </section>

            {% if cart__recommended_products__enable %}
              <section data-cart-drawer-promotion-items>
                <script type="application/json"
                        data-section-settings>{{- section.settings | json -}}</script>
              </section>
            {% endif %}
          </div>
        </main>
        <footer class="z-10 py-3 md:py-6 relative bottom-0 w-full justify-end space-y-5 shadow-invert-md inset-x-0 px-4 {{ settings.cart_color_scheme }}">

          <div data-cart-drawer-empty-footer
               class="flex flex-col {{ align__horizontal__footer }} {{ cart_empty_class }}">
            {% liquid
              for block in section.blocks
                case block.type
                  when 'footer_text'
                    render 'richtext.text', block: block
                  when 'footer_buttons'
                    render 'richtext.buttons', block: block
                  when 'footer_accent_line'
                    render 'richtext.accent_line', block: block
                endcase
              endfor
            %}
          </div>

          <form data-cart-checkout-form
                action="{{ routes.cart_url }}"
                method="post"
                class="block space-x-3 {{ cart_with_items_class }}">
            <button type="submit"
                    name="checkout"
                    value="Checkout"
                    class="relative w-full button-primary"
                    data-cart-checkout-button
                    {% if cart.items.size == 0 %}disabled="disabled"{% endif %}>
              {% render '_loading-spinner' %}
              <span>
                {{ "cart_drawer.checkout" | t }}
              </span>
            </button>
            <div>
              {% for block in section.blocks %}
                {% if block.type == "route_protection_product" %}
                  {% render 'cart-drawer.route_protection_product', block: block %}
                {% endif %}
              {% endfor %}
            </div>
            <div class="mt-4 grid items-center grid-cols-[auto_1fr]">

              {% if settings.cart_gift_checkbox %}
                <input id="cart-drawer__gift"
                       name="attributes[This is a gift]"
                       data-cart-gift-checkbox
                       type="checkbox"
                       class="inline-flex h-4 w-4 items-center justify-center border-gray-300 p-px peer focus:ring-primary-outline rounded-theme-sm text-primary-bg"
                       value="Yes">
                <label class="mr-auto ml-2 inline-flex h-4 cursor-pointer select-none leading-none space-x-4"
                       for="cart-drawer__gift">
                  <span class="text-sm font-medium">This is a gift</span>
                </label>
                {% assign cartNoteClasses = "peer-checked:opacity-100 opacity-0 max-h-0 overflow-hidden peer-checked:max-h-[200px] transition-all ease-linear peer-checked:overflow-visible duration-300" %}
              {% endif %}

              {% if settings.cart_note %}
                <label class="flex mt-1 items-center col-span-2 {{ cartNoteClasses }}">
                  <span class="sr-only">Cart note</span>
                  <textarea data-cart-note-textarea
                            class="mt-2 w-full resize-y border border-gray-200 p-2 rounded-theme focus:ring-primary-outline focus:ring-2 max-h-[200px] min-h-[60px] focus:border-transparent placeholder:text-sm placeholder:text-gray-400 text-[13px]"
                            name="note"
                            rows="3"
                            placeholder="Add special Instructions"></textarea>
                </label>
              {% endif %}
            </div>
            <div class="mt-4 flex justify-between text-lg font-bold tracking-tight">
              <span class="cart-title">
                {{ "cart_drawer.subtotal" | t }}
              </span>
              <span class="relative cart-title">
                {% render '_loading-spinner', class: 'text-gray-500 bg-theme-bg' %}
                <span data-cart-total>
                  {% if cart.total_discount > 0 %}
                    <span class="inline-flex items-center">
                      <span class="line-through opacity-50 grayscale">{{ cart.original_total_price | money }}</span>
                      <span class="ml-2">{{ cart.total_price | money }}</span>
                    </span>
                  {% else %}
                    {{ cart.total_price | money }}
                  {% endif %}
                </span>
              </span>
            </div>
            <small class="flex text-gray-500">
              {{ "cart_drawer.shipping_and" | t }}
            </small>
          </form>
        </footer>
      </div>
    </section>
    {% render 'drawer-overlay' %}
  </div>
{% endif %}

{% if settings.cart_type == 'page' %}
  <div class="pointer-events-none fixed inset-0 cart-added-modal group z-[101] hidden"
       data-drawer="cart-added-modal">
    <section class="fixed w-80 h-48 p-6 rounded-md right-12 top-24 group-ac:pointer-events-auto border-r border-r-gray-100 shadow-xl z-10 translate-x-[105%] group-ac:translate-x-0 group-ac:opacity-100 ease-linear flex flex-col  justify-between max-h-screen opacity-0 transition-[transform,_opacity] group-ac:delay-[0s,_0s] delay-[0s,_180ms] duration-[180ms,_0s] {{ settings.cart_color_scheme }}"
             data-drawer-content>

      <div class="flex items-center justify-between text-lg font-bold">
        {{ "cart_drawer.added" | t }}
        <button type="button"
                class="hf:text-theme-text text-theme-text/50"
                data-drawer-close="cart-added-modal">
          <span class="sr-only">
            {{ "cart_drawer.close" | t }}
          </span>
          {% render '_icon', icon: 'x-mark', class: "w-5 h-5" %}
        </button>
      </div>

      <div data-drawer-added-items
           class="flex-1 mt-4"></div>
    </section>
  </div>
  <div class="hidden">
    {% for block in section.blocks %}
      {% if block.type == "route_protection_product" %}
        {% render 'cart-drawer.route_protection_product', block: block %}
      {% endif %}
    {% endfor %}
  </div>
{% endif %}


