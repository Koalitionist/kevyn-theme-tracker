{%- comment -%} Auto Generated Variables start {%- endcomment -%}
{%- liquid
  assign overlay = section.settings.overlay
  assign products = section.settings.products
  assign _collections = section.settings.collections
  assign caption = section.settings.caption
  assign caption_font = section.settings.caption_font
  assign min_width_desktop = section.settings.min_width_desktop
  assign min_width_mobile = section.settings.min_width_mobile
  assign container_overflow = section.settings.container_overflow
  assign responsive_visibility = section.settings.responsive_visibility
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign color_scheme = section.settings.color_scheme
  assign sectionID = section.settings.sectionID
-%}
{%- comment -%} Auto Generated Variables end {%- endcomment -%}

{% liquid

  assign blockTypes = section.blocks | map: "type"
  if blockTypes contains "scrollbar_position"
    assign hideDefaultScrollables = true
  endif
%}

<div id="{{ sectionID }}"
     class="scrollable-images {{ color_scheme }} {{ padding_top }} {{ padding_bottom }} {{ responsive_visibility }}">


  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'text' %}
        <div class="container">
          {% render 'richtext.text', block: block %}
        </div>
      {% when 'image' %}
        <div class="container">
          {% render 'richtext.image', block: block %}
        </div>
      {% when 'buttons' %}
        <div class="container">
          {% render 'richtext.buttons', block: block %}
        </div>
      {% when 'accent_line' %}
        <div class="container">
          {% render 'richtext.accent_line', block: block %}
        </div>
      {% when 'scrollbar_position' %}
        {% render 'scrollable-images.scrollbar_position', block: block %}
    {% endcase %}
  {% endfor %}
  {% unless hideDefaultScrollables %}
    {% render 'scrollable-images.scrollbar_position' %}
  {% endunless %}

</div>

