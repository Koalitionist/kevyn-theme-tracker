                            {% when "title-ascending" %}
                              {{ "main_collection_filter_sort_bar.alphabetically_a_z" | t }}
                            {% when "title-descending" %}
                              {{ "main_collection_filter_sort_bar.alphabetically_z_a" | t }}
                            {% when "price-ascending" %}
                              {{ "main_collection_filter_sort_bar.price_low" | t }}
                            {% when "price-descending" %}
                              {{ "main_collection_filter_sort_bar.price_high" | t }}
                            {% when "created-ascending" %}
                              {{ "main_collection_filter_sort_bar.date_old" | t }}
                            {% when "created-descending" %}
                              {{ "main_collection_filter_sort_bar.date_new" | t }}
                          {% endcase %}
                        </span>
                      </label>
                    {%- endfor -%}
                    <div class="w-full flex items-center">
                      <button type="submit"
                              form="mobile_sort-filter-form--{{ section.id }}"
                              class="button-primary mt-3 w-full">
                        {{ "main_collection_filter_sort_bar.apply_sort" | t }}
                      </button>
                    </div>
                  </fieldset>
                {% endif %}

                {% if filters__show == false %}
                  <form>
                    <fieldset class="gap-2 grid {% if filters__type == 'cards' %}lg:hidden{% endif %}">
                      {% for option in collection.sort_options %}
                        {% if value.active %}{% assign withActive = true %}{% endif %}
                        <label class="sort--{{ option.value }} flex space-x-2 font-normal items-center cursor-pointer">
                          <span class="relative w-4 h-4 flex items-center justify-center">
                            <input type="radio"
                                   class="peer appearance-none w-full h-full rounded-full border-theme-text border bg-theme-text/30"
                                   name="sort_by"
                                   value="{{ option.value }}"
                                   {% if option.value == sort_by %}checked="checked"{% endif %} >
