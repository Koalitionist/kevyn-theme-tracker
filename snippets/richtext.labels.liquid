{%- comment -%} Auto Generated Variables start {%- endcomment -%}
{%- liquid
  assign labels = block.settings.labels
  assign opacity = block.settings.opacity
  assign margin_top = block.settings.margin_top
  assign margin_bottom = block.settings.margin_bottom
  assign label__style = block.settings.label__style
  assign section_max_width = block.settings.section_max_width
  assign responsive_visibility = block.settings.responsive_visibility
-%}
{%- comment -%} Auto Generated Variables end {%- endcomment -%}

{% liquid
  assign opacity = opacity | divided_by: 100.0
  assign labels = labels | split: ',' | uniq | compact
%}

<div {% unless no_block %}id="block--{{ block.id }}" {{ block.shopify_attributes }}{% endunless %}
     class="w-full inline-flex gap-2 flex-wrap {{ section_max_width | default: "max-w-full" }} {{ responsive_visibility }}"
     style="margin-bottom: {{ margin_bottom }}px; margin-top: {{ margin_top }}px;opacity: {{ opacity }};">
  {% for label in labels %}
    <div class="label label-item {{ label__style }}">
      {{ label | trim }}
    </div>
  {% endfor %}
</div>

