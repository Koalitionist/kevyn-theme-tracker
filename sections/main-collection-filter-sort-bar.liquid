{%- comment -%} Auto Generated Variables start {%- endcomment -%}
{%- liquid
  assign filters__show = section.settings.filters__show
  assign filters__type = section.settings.filters__type
  assign filters__count = section.settings.filters__count
  assign sort__show = section.settings.sort__show
  assign responsive_visibility = section.settings.responsive_visibility
  assign color_scheme = section.settings.color_scheme
  assign sectionID = section.settings.sectionID
-%}
{%- comment -%} Auto Generated Variables end {%- endcomment -%}

{% liquid
  assign sort_by = collection.sort_by | default: collection.default_sort_by
  assign customFilterStyles = section.blocks | map: "settings" | map: "title"
%}


{% for option in collection.sort_options %}
  {% if option.value == sort_by %}

    {% capture sort_by_name %}
      {% case option.value %}
        {% when "manual" %}
          {{ "main_collection_filter_sort_bar.featured" | t }}
        {% when "best-selling" %}
          {{ "main_collection_filter_sort_bar.best_selling" | t }}
        {% when "title-ascending" %}
          {{ "main_collection_filter_sort_bar.alphabetically_a_z" | t }}
        {% when "title-descending" %}
          {{ "main_collection_filter_sort_bar.alphabetically_z_a" | t }}
        {% when "price-ascending" %}
          {{ "main_collection_filter_sort_bar.price_low" | t }}
        {% when "price-descending" %}
          {{ "main_collection_filter_sort_bar.price_high" | t }}
        {% when "created-ascending" %}
          {{ "main_collection_filter_sort_bar.date_old" | t }}
        {% when "created-descending" %}
          {{ "main_collection_filter_sort_bar.date_new" | t }}
      {% endcase %}
    {% endcapture %}
    {% assign sort_by_name = sort_by_name | trim | strip_newlines %}
    {% break %}
  {% endif %}
{% endfor %}

{% capture filter_url %}{% for filter in collection.filters %}{%- if filter.min_value.value != null or filter.max_value.value != null -%}&filter.v.price.gte={{ filter.min_value.value | divided_by: 100 }}&filter.v.price.lte={{ filter.max_value.value | divided_by: 100 }}{% endif %}{% for value in filter.active_values %}&{{ value.param_name }}={{ value.value }}{% endfor %}{% endfor %}{% endcapture %}

<div id="{{ sectionID }}"
     class="main-collection-filter-sort-bar relative grid {{ color_scheme }} {{ responsive_visibility }}">
  <main class="relative z-10 border-b border-b-theme-text/20 ">
    <div class="container flex justify-between text-xs font-medium items-center">
      {% if filters__show %}
        <section>
          {% if filters__type == 'cards' %}
            <form class="items-center space-x-4 lg:flex sr-only lg:not-sr-only"
                  id="desktop_sort-filter-form--{{ section.id }}">
              {%- for filter in collection.filters -%}

                <div class="relative"
                     data-collection-filter-name="{{ filter.param_name }}"
                     data-collection-filter-type="{{ filter.type }}">
                  <button type="button"
                          data-collection-filter-toggle
                          class="no-js-hidden opacity-0 lg:opacity-100 lg:flex items-center hf:text-theme-text/80 nav-link py-4">
                    <span class="flex items-center">
                      <span class="uppercase">{{ filter.label | escape }}</span>
                      {% render '_icon', icon: 'chevron-down', class: "ml-2 w-4 h-4" %}
                    </span>
                  </button>

                  {% assign blockSettings = null %}
                  {% if customFilterStyles contains filter.label and filter.type != "price_range" %}
                    {% assign blockSettings = section.blocks | map: "settings" | where: "title", filter.label | first %}

                    {% case blockSettings.style %}
                      {% when 'checkboxes' %}
                        <div data-collection-filter-container
                             class="absolute top-full -left-2 overflow-hidden transition-all ease-linear shadow-xl"
                             style="max-height: 0; opacity: 0">
                          <div class="bg-theme-bg p-4 min-w-[280px] ">

                            <fieldset class="grid gap-2">
                              {% assign withActive = false %}
                              {%- for value in filter.values -%}
                                {% if value.active %}{% assign withActive = true %}{% endif %}
                                <label class="flex space-x-2 font-normal items-center cursor-pointer">
                                  <span class="relative w-4 h-4">
                                    <input type="checkbox"
                                           class="peer appearance-none w-full h-full rounded-theme-sm border-theme-text border bg-theme-text/30"
                                           name="{{ value.param_name }}"
                                           value="{{ value.value }}"
                                           {% if value.active %}checked="checked"{% endif %} >
                                    <span class="absolute left-0 top-0 w-full h-full flex items-center justify-center opacity-0 peer-checked:opacity-100">
                                      {% render '_icon', icon: 'check-mark', class: 'w-3.5 h-3.5 stroke-2 text-theme-text' %}
                                    </span>
                                  </span>
                                  <span class="truncate">
                                    {{ value.label }}
                                  </span>
                                  <span>{% if filters__count %}({{ value.count }}){% endif %}</span>
                                </label>
                              {%- endfor -%}
                            </fieldset>
                            <div class="w-full flex items-center">
                              {% if withActive %}
                                <a href="{{ filter.url_to_remove }}"
                                   class="button-primary mt-3--outline mr-2">
                                  {{ "main_collection_filter_sort_bar.reset" | t }}
                                </a>
                              {% endif %}
                              <button type="submit"
                                      class="button-primary mt-3 w-full">
                                {{ "main_collection_filter_sort_bar.apply_filters" | t }}
                              </button>
                            </div>
                          </div>
                        </div>
                      {% when 'tags' %}

