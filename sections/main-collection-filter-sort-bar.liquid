                              class="button-primary mt-3 w-full">
                        {{ "main_collection_filter_sort_bar.sort" | t }}
                      </button>
                    </div>
                  </form>
                {% endif %}


              </div>
            </div>
          </div>

          <noscript>
            {% render '_form', form: 'no-js-collection-sort' %}
          </noscript>
        </section>
      {% endif %}

    </div>
  </main>
  <footer class="container">
    {% capture active_filters %}
      {% assign withActive = false %}
      {% for filter in collection.filters %}
        {% case filter.type %}
          {% when 'price_range' %}
            {% if filter.max_value.value < filter.range_max or filter.min_value.value > 0 %}
              {% assign withActive = filter.url_to_remove | split: "?" | first %}
              <a class="badge inline-flex m-0.5 md:m-1.5"
                 href="{{ filter.url_to_remove }}">
                {{ filter.min_value.value | money }} - {{ filter.max_value.value | money }}
                {% render '_icon', icon: 'x-close', class: 'w-4 h-4 ml-1.5' %}
              </a>
            {% endif %}
          {% when 'boolean' or 'list' %}
            {% for value in filter.active_values %}
              {% assign withActive = filter.url_to_remove | split: "?" | first %}
              <a class="badge inline-flex m-0.5 md:m-1.5"
                 href="{{ value.url_to_remove }}">
                {{ value.label }}
                {% render '_icon', icon: 'x-close', class: 'w-4 h-4 ml-1.5' %}
              </a>
            {% endfor %}
        {% endcase %}
      {% endfor %}

      {% if withActive %}
        <a href="{{ withActive }}?sort_by={{ sort_by }}"
           class="inline-flex text-sm items-center m-0.5 hf:underline pl-1">
          {{ "main_collection_filter_sort_bar.clear_all" | t }} {% render '_icon', icon: 'x-close', class: 'w-4 h-4 ml-1.5' %}
        </a>
      {% endif %}
    {% endcapture %}
    {% if filters__show and withActive %}
      <nav class="flex flex-wrap my-4 -m-0.5 md:-mx-1.5">
        {{ active_filters }}
      </nav>
    {% endif %}
  </footer>
</div>


