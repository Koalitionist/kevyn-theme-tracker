{%- comment -%} Auto Generated Variables start {%- endcomment -%}
{%- liquid
  assign open = block.settings.open
  assign title = block.settings.title
  assign answer = block.settings.answer
  assign _page = block.settings.page
-%}
{%- comment -%} Auto Generated Variables end {%- endcomment -%}

{%- liquid
  assign question = _page.title | default: title
  assign answer = _page.content | default: answer
-%}


<div class="faq__faq grid border-b border-b-theme-text/50" {{ block.shopify_attributes }}>
  {% render '_collapsible', title: question, title_font: section.settings.question_font, content_font: section.settings.answer_font, content: answer, blockId: block.id %}
</div>
